// Place your key bindings in this file to override the defaults
[
  {
    "key": "cmd+shift+]",
    "command": "workbench.action.showNextWindowTab"
  },
  {
    "key": "cmd+shift+[",
    "command": "workbench.action.showPreviousWindowTab"
  },
  {
    "key": "cmd+shift+=",
    "command": "workbench.action.newWindowTab"
  },
  {
    "key": "cmd+shift+-",
    "command": "workbench.action.closeWindow"
  },
  {
    "key": "cmd+shift+\\",
    "command": "workbench.action.mergeAllWindowTabs"
  },
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus"
  },
  {
    "key": "cmd+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "cmd+n shift+'",
    "command": "extension.selectDoubleQuote",
    "when": "editorFocus"
  },
  {
    "key": "cmd+k shift+'",
    "command": "-extension.selectDoubleQuote",
    "when": "editorFocus"
  },
  // ============================================
  // VSCode + Neovim Integration Enhancements
  // ============================================

  // Ensure F key in Neovim mode is passed through for Leap
  {
    "key": "f",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "f"
  },
  {
    "key": "shift+f",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "F"
  },

  // Ensure s key for substitute is passed through
  {
    "key": "s",
    "command": "vscode-neovim.send",
    "when": "editorTextFocus && neovim.mode != insert",
    "args": "s"
  },

  // Better terminal handling
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },

  // Quick access to command palette (complement to leader-fc)
  {
    "key": "cmd+shift+p",
    "command": "workbench.action.showCommands"
  },

  // Focus editor when in terminal
  {
    "key": "escape",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },

  // Better panel navigation
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel"
  },

  // Quick file switching (complement Neovim file navigation)
  {
    "key": "cmd+e",
    "command": "workbench.action.quickOpen",
    "when": "!inQuickOpen"
  },

  // Enhanced split navigation to work with Neovim ctrl+hjkl
  {
    "key": "cmd+alt+h",
    "command": "workbench.action.focusLeftGroup"
  },
  {
    "key": "cmd+alt+l",
    "command": "workbench.action.focusRightGroup"
  },
  {
    "key": "cmd+alt+k",
    "command": "workbench.action.focusAboveGroup"
  },
  {
    "key": "cmd+alt+j",
    "command": "workbench.action.focusBelowGroup"
  }
]
